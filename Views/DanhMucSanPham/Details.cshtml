@model BookWeb.Data.DanhMucSanPham

@{
    ViewData["Title"] = "Chi tiết danh mục";
}

<h2>@ViewData["Title"]</h2>

<div class="container mt-4">
    <table class="table table-bordered table-hover">
        <thead class="table-light text-center">
            <tr>
                <th class="text-center">Mã danh mục</th>
                <th class="text-center">Tên danh mục</th>
                <th class="text-center">Mô tả</th>
                <th class="text-center" style="width: 200px;">Thao tác</th>
            </tr>
        </thead>
        <tbody class="text-center">
            <tr>
                <td>@Model.MaDanhMuc</td>
                <td>@Model.TenDanhMuc</td>
                <td>@Model.MoTa</td>
                <td>
                        <a asp-action="Edit" asp-route-id="@Model.MaDanhMuc" class="btn btn-warning">Chỉnh sửa</a>
                        <a asp-action="Index" class="btn btn-success">Quay lại</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>

