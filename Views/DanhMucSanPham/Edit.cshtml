@model BookWeb.Data.DanhMucSanPham

@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="MaDanhMuc" />

    <div class="form-group">
        <label asp-for="TenDanhMuc"></label>
        <input asp-for="TenDanhMuc" class="form-control" />
        <span asp-validation-for="TenDanhMuc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MoTa"></label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-info mt-4 me-2">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-success mt-4 ">Quay lại</a>
</form>
