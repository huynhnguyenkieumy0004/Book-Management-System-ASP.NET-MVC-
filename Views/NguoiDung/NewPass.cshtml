@model BookWeb.Data.NguoiDung
@{
    ViewData["Title"] = "Đặt mật khẩu mới";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-1">
                <div class="signup-form">
                    <h2>Đặt mật khẩu mới</h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <form asp-action="ResetPassword" asp-controller="NguoiDung" method="post">
                        <input type="hidden" name="TenDangNhap" value="@ViewBag.Username" />

                        <div class="form-group">
                            <label>Tên đăng nhập</label>
                            <input readonly value="@ViewBag.Username" class="form-control" />
                        </div>

                        <div class="form-group">
                            <label>Mật khẩu mới</label>
                            <input asp-for="MatKhau" type="password" class="form-control" />
                            <span asp-validation-for="MatKhau" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Cập nhật mật khẩu</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
