@model BookWeb.Data.NguoiDung

@{
    ViewData["Title"] = "Đăng nhập";
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-1">
                <div class="login-form">
                    <h2>Đăng nhập vào tài khoản</h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <form asp-action="Login" asp-controller="NguoiDung" method="post">
                        <div class="form-group">
                            <label>Tên đăng nhập</label>
                            <input asp-for="TenDangNhap" class="form-control" />
                            <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Mật khẩu</label>
                            <input asp-for="MatKhau" type="password" class="form-control" />
                            <span asp-validation-for="MatKhau" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Đăng nhập</button><br />
                        <a asp-action="ForgotPass" asp-controller="NguoiDung">Quên mật khẩu?</a><br />
                        <a asp-action="Create" asp-controller="NguoiDung" class="btn btn-success mt-2">Đăng ký tài khoản mới</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
