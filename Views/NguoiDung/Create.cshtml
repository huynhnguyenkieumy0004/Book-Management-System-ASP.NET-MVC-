@model BookWeb.Data.NguoiDung

@{
    ViewData["Title"] = "Đăng ký";
}

<section id="form">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-1">
                <div class="signup-form">
                    <h2>Đăng ký tài khoản mới</h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <form asp-action="Create" asp-controller="NguoiDung" method="post">
                        <div class="form-group">
                            <label>Tên người dùng</label>
                            <input asp-for="TenNguoiDung" class="form-control" />
                            <span asp-validation-for="TenNguoiDung" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Tên đăng nhập</label>
                            <input asp-for="TenDangNhap" class="form-control" />
                            <span asp-validation-for="TenDangNhap" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Mật khẩu</label>
                            <input asp-for="MatKhau" type="password" class="form-control" />
                            <span asp-validation-for="MatKhau" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Email</label>
                            <input asp-for="Email" type="email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Điện thoại</label>
                            <input asp-for="DienThoai" type="text" class="form-control" />
                            <span asp-validation-for="DienThoai" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Tạo tài khoản</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
